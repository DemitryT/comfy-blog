.page-header
  = link_to 'New Blog Post', new_admin_blog_post_path(@site), :class => 'btn pull-right'
  %h2 Blog Posts
  
= paginate @posts
  
%table.table.table-hover.table-bordered
  %tr
    %th.main Title
    %th Author
    %th Published
    %th Comments
    %th
    
  - @posts.each do |post|
    %tr
      %td.main
        = link_to post.title, edit_admin_blog_post_path(@site, post)
        .item-meta
          = post.excerpt
      %td
        = post.author
      %td
        = post.published_at.try(:to_s, :db)
      %td
        = link_to pluralize(post.comments.count, 'Comment'), admin_blog_comments_path(@site, :post_id => post.id), :class => 'btn btn-small btn-inverse'
      %td
        .btn-group
          = link_to 'Edit', edit_admin_blog_post_path(@site, post), :class => 'btn btn-small'
          = link_to 'Delete', admin_blog_post_path(@site, post), :method => :delete, :data => {:confirm => 'Are you sure?'}, :class => 'btn btn-small btn-danger'
          
= paginate @posts
